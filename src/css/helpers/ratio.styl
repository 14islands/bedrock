//
// Ratio classes for fluid ratio elements
//
// aspect ratio  | padding value
// --------------|----------------------
//  16:9         |       56.25%
//  4:3          |       75%
//  3:2          |       66.66%
//  8:5          |       62.5%
//
// Example usage:
//
// <div class="u-ratio u-ratio--4_3">
//   <div class="u-ratio-content">
//   	This is a 4:3 ratio with the padding trick.
//   </div>
// </div>
//
//

$u-ratio
  position: relative

$u-ratio-content
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  width: 100%
  height: 100%

$u-ratio--1_1:before
  padding-top: 100%

$u-ratio--2_1:before
  padding-top: 50%

$u-ratio--1_2:before
  padding-top: 200%

$u-ratio--4_1:before
  padding-top: 25%

$u-ratio--4_3:before
  padding-top: 75%

$u-ratio--7_6:before
  padding-top: 86%

$u-ratio--16_10:before
  padding-top: 62.5%

$u-ratio--16_9:before
  padding-top: 56.25%
